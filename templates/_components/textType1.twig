{% set subheading = entry.textType1SubHeading ?? false %}
{% set heading = entry.textType1Heading ?? false %}
{% set description = entry.textType1Description ?? false %}

<section class="textType1" data-section-id="about-us">
    <div class="container" data-sal="slide-up" data-sal-duration="1200">
        <div class="inner">
            <div class="text-content">
                {% if subheading %}
                    <h5>{{subheading}}</h5>
                {% endif %}
                {% if heading %}
                    <h2>{{heading}}</h2>
                {% endif %}
                {% if description %}
                    <p>{{description|nl2br}}</p>
                {% endif %}
            </div>
        </div>
    </div>
</section>